<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	    <script src="https://kit.fontawesome.com/f19d67c548.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <h1>To Do List</h1>
        <form action="/createTask" method="POST">
            <ol>
                <%for(let t of todo){%>
                    <%if(t.isDone==false){%>
                    <li>
                        <%=t.name%>
                        <a href="/delete/?_id=<%=t._id%>&name=<%=t.name%>"><i class="fa fa-trash" aria-hidden="true"></i></a>
                    </li>
                    <%}%>
                <%}%>
            </ol>
            <input type="text" name="name" placeholder="enter new task">
            <button type="submit">Add new task</button>
        </form>
        <h1>Completed</h1>
       
    </body>
</html>